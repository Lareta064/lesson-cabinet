mixin lesson-menu(items)
	ul
		each item in items
			if item.addClass
				li(class=""+ item.addClass)
					a(href="#!") #{item.title}
			else
				li
					a(href="#!") #{item.title}
			


.lesson-header
	.lesson-header__content
		.lesson-header__top.m-auto
			button.lesson-header__icon-back
				img(src="./images/lesson/icons/arrow-left.png", width="25" alt="alt")
			.lesson-header__text
				p Он есть? (Он является?)
	//====== МЕНЮ ======
	.container-750
		.lesson-header__menu
			+lesson-menu([{title: 'Видео'}, {title: 'Аудирование'},{title: 'Словарь'},{title: 'Перевод', addClass:'lesson-header__menu-active'},{title: 'Диктант', addClass:'lesson-header__menu-disable'}])
	//====== //МЕНЮ ======