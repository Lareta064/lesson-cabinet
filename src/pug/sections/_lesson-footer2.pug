mixin btnItem(ic, text)
	button.button-item
		img(src="./images/lesson/icons/"+ic+".png", alt="alt")
		span #{text}

.lesson-bottom
	.lesson-bottom__menu
		.container-750
			include _lesson-bottomMenu.pug
	.lesson-footer
